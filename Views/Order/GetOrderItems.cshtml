@model IEnumerable<Sweet_Shop_Management.Models.ViewModel.ItemViewModel>

<div class="m-2 p-2">
    <h2>Items Solled with Order Id @Model.FirstOrDefault()?.OrderId</h2>
    <table id="ordersItem" class="table table-striped table-bordered table-hover m-4 p-4">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Item Name</th>
            <th>Quantity Sold</th>
            <th>Price per Unit</th>
            <th>Final Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="sale-row">
                <td>@item.OrderId</td>
                <td>@item.SweetItemName</td>
                <td>@item.QuantitySold @item.Unit</td>
                <td>@item.SalePrice @item.Currency</td>
                <td>@item.FinalPrice @item.Currency</td>
            </tr>
        }
    </tbody>
</table>
    <div>
        <button class="btn btn-info" onclick="window.location.href='@Url.Action("GetAllOrders", "Order")'">Back To List</button>
    </div>
</div>

@section Scripts{
    <script>
         $(document).ready(function () {
          $('#ordersItem').DataTable();
        });
    </script>
}
