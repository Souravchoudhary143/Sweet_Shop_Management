@model IEnumerable<Sweet_Shop_Management.Models.ProductCategory>

<h2>Product Categories</h2>

<p>
    <button type="button" class="btn btn-outline-success p-2 m-2" fdprocessedid="5qoqqc" onclick="location.href='@Url.Action("Create", "Category")'">
        <i class="fas fa-plus m-2"></i>    &nbsp;Add New Category
    </button>
</p>

<table id="tblData" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th style="width:50%; text-align:center">Category Name</th>
            <th style="width:30%; text-align:center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td style="text-align:center">@category.Category</td>
                <td style="width:30%; text-align:center">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts{
    <script src="~/js/sweet/dataTable.js"></script>
}
