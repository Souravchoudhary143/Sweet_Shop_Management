@model Sweet_Shop_Management.Models.ProductCategory

<h2>Delete Product Category</h2>

<h3>Are you sure you want to delete the category "@Model.Category"?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "ProductCategory")" class="btn btn-secondary">Cancel</a>
</form>
